<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="שם המשתמש: "
            android:paddingRight="5sp"
            android:textSize="30sp"
            android:textColor="@color/black"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/qm"
            android:id="@+id/userNamePattern_ib"/>
    </LinearLayout>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:id="@+id/userName_et"
    android:hint=""
    android:textDirection="rtl"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="סיסמא: "
            android:paddingRight="5sp"
            android:textSize="30sp"
            android:textColor="@color/black"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/qm"
            android:id="@+id/passwordPattern_ib"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:weightSum="10">
    <EditText
        android:id="@+id/regPassword_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:inputType="textPassword"
        android:textColor="@color/black" />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:id="@+id/showRegPassword_ib"
            android:layout_weight="0.75"
            android:background="@drawable/ic_password" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="אימות סיסמא: "
            android:paddingRight="5sp"
            android:textSize="30sp"
            android:textColor="@color/black"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/qm"
            android:id="@+id/confirmPattern_ib"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:weightSum="10">
    <EditText
        android:id="@+id/confirm_et"
        android:layout_width="wrap_content"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="@color/black" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:id="@+id/showConfirm_ib"
        android:layout_weight="0.75"
        android:background="@drawable/ic_password" />
</LinearLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="הרשמה"
    android:textSize="25sp"
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    android:id="@+id/register_btn"
    android:backgroundTint="#534F4F"
    android:layout_marginBottom="50dp"/>

</LinearLayout>